{
  "name": "blockid",
  "private": true,
  "version": "0.0.0",
  "description": "Block ID SDK",
  "author": {
    "name": "Stanislaw Glogowski",
    "email": "hello@newobject.pl"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/blockid/sdk.git"
  },
  "bugs": {
    "url": "https://github.com/blockid/sdk/issues"
  },
  "scripts": {
    "prebuild": "npm run lint && npm run test && rimraf ./dist/*",
    "build": "tsc",
    "postbuild": "tempack ./dist/",
    "lint": "tslint src/**/*.ts",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "blockid-core": "0.1.0-alpha.4",
    "bn.js": "^4.11.8",
    "cross-fetch": "^2.2.2",
    "ethjs": "^0.4.0",
    "rxjs": "^6.2.2"
  },
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "@types/node": "^10.7.1",
    "jest": "^23.5.0",
    "rimraf": "^2.6.2",
    "tempack": "^1.0.1",
    "ts-jest": "^23.1.3",
    "tslint": "^5.11.0",
    "typescript": "^3.0.1"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(\\.spec)\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  }
}
